<h1><%= @current_user.first_name %></h1>
<h2>Here are some of the events in your state:</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Host</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @local_events.each do |local| %>
      <tr>
        <td><%= local.name %></td>
        <td><%= local.start_date %></td>
        <td><%= local.city %></td>
        <td><%= local.user.first_name %></td>
        <td>Join</td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Here are some events OUTSIDE your state</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>State</th>
      <th>Host</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @outside_events.each do |o| %>
      <tr>
        <td><%= o.name %></td>
        <td><%= o.start_date %></td>
        <td><%= o.city %></td>
        <td><%= o.state %></td>
        <td><%= o.user.first_name %></td>
        <td>
          <form action="/memberships/create" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="event_id" value="<%= o.id %>">
            <input type="submit" value="Join">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
